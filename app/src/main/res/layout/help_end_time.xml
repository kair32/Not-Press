<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.aks.notpress.ui.offer.OfferViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        bind:numberPickerTime="@{viewModel}">

        <TextView
            android:id="@+id/np_hour1"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:textSize="@dimen/text_36"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ic_help_background"
            bind:buttonRadiusFloat="@{@dimen/timer_radius}"
            tools:text="2"/>

        <TextView
            android:id="@+id/np_hour2"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_36"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ic_help_background"
            bind:buttonRadiusFloat="@{@dimen/timer_radius}"
            tools:text="9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_36"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:text="@string/colon"/>

        <TextView
            android:id="@+id/np_min1"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:textSize="@dimen/text_36"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ic_help_background"
            bind:buttonRadiusFloat="@{@dimen/timer_radius}"
            tools:text="5"/>

        <TextView
            android:id="@+id/np_min2"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_36"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/ic_help_background"
            bind:buttonRadiusFloat="@{@dimen/timer_radius}"
            tools:text="9"/>


    </LinearLayout>

</layout>