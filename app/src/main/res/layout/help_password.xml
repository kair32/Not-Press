<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.aks.notpress.utils.PasswordEnterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.aks.notpress.utils.PasswordView
            android:id="@+id/drawerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:backgroundIv="@{viewModel.color}" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv1"
            bind:backgroundIv="@{viewModel.color}"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv2"
            app:layout_constraintEnd_toEndOf="parent"
            bind:backgroundIv="@{viewModel.color}"/>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toBottomOf="@+id/iv1"
            app:layout_constraintStart_toStartOf="parent"
            bind:backgroundIv="@{viewModel.color}"/>

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toBottomOf="@+id/iv1"
            app:layout_constraintStart_toEndOf="@+id/iv4"
            bind:backgroundIv="@{viewModel.color}"/>

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toBottomOf="@+id/iv1"
            app:layout_constraintStart_toEndOf="@+id/iv5"
            app:layout_constraintEnd_toEndOf="parent"
            bind:backgroundIv="@{viewModel.color}"/>


        <ImageView
            android:id="@+id/iv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toBottomOf="@+id/iv4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            bind:backgroundIv="@{viewModel.color}"/>

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toBottomOf="@+id/iv4"
            app:layout_constraintStart_toEndOf="@+id/iv7"
            bind:backgroundIv="@{viewModel.color}"/>

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20"
            android:layout_margin="@dimen/margin_25"
            android:src="@drawable/ic_password_item"
            app:layout_constraintTop_toBottomOf="@+id/iv4"
            app:layout_constraintStart_toEndOf="@+id/iv8"
            app:layout_constraintEnd_toEndOf="parent"
            bind:backgroundIv="@{viewModel.color}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>