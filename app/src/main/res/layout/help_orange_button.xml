<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="price"
            type="String" />
        <variable
            name="viewModel"
            type="com.aks.notpress.ui.book.PayBookViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_button_violet_border"
            android:backgroundTint="@android:color/black"
            android:onClick="@{()->viewModel.onPayBook(price)}"
            app:layout_constraintBottom_toBottomOf="@+id/fl_old"
            app:layout_constraintTop_toBottomOf="@+id/fl_old">

            <ImageView
                android:id="@+id/main_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_orange_button"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/frame_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_circle_orange_button"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_10"
                android:text="@{price}"
                android:includeFontPadding="false"
                android:gravity="center"
                android:lines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textSize="@dimen/text_36"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/frame_circle"
                tools:text="2900p"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stop"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/frame_circle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_10"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/audio_book"
                android:textSize="@dimen/text_36"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@+id/frame_circle"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/main_background"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_old_price"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:rotation="-23"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/text_28"
                android:textColor="@color/colorDeepGreen"
                tools:text="123P"/>
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>